<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F4ED">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/denotation_design"
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- Top Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/detailsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#A67855"
                android:text="@string/details"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/designersButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="#7B5E4A"
                android:text="@string/designers"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/reviewsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="#5B3A3A"
                android:text="@string/reviews"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Main Image -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/room1"
            android:layout_marginBottom="16dp"
            android:background="#E5DFD6"
            android:contentDescription="@string/room1_desc" />

        <!-- Pricing Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_pricing"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/design_virtually"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/design_virtual_desc"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"
                    android:textColor="#444444"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_159"
                    android:backgroundTint="#5B3A3A"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:layout_marginStart="8dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hands_on_design"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hands_on_desc"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"
                    android:textColor="#444444"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_499"
                    android:backgroundTint="#5B3A3A"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Step 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/step1"
            android:background="#D8C49F"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/room2"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:background="#E5DFD6"
            android:contentDescription="@string/room2_desc"/>

        <!-- Step 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/step2"
            android:background="#D8C49F"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/room3"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:background="#E5DFD6"
            android:contentDescription="@string/room3_desc"/>

        <!-- Step 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/step3"
            android:background="#D8C49F"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/room4"
            android:scaleType="centerCrop"
            android:background="#E5DFD6"
            android:contentDescription="@string/room4_desc"/>
    </LinearLayout>
</ScrollView>
