<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F4ED">

    <!-- Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/denotation_design"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="16dp" />

    <!-- Navigation Buttons -->
    <LinearLayout
        android:id="@+id/navigationButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/detailsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/details"
            android:backgroundTint="#5B3A3A"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/designersButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/designers"
            android:backgroundTint="#7B5E4A"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/reviewsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/reviews"
            android:backgroundTint="#5B3A3A"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Main Image -->
            <ImageView
                android:id="@+id/mainImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/room5"
                android:contentDescription="@string/room1_desc"
                android:layout_marginBottom="16dp" />

            <!-- Designer Cards Grid -->
            <GridLayout
                android:id="@+id/designerGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:columnOrderPreserved="false"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <!-- Card 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="#E7DBC2"
                    android:padding="12dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/person1"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/designer_sharon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/designer_sharon"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/talk"
                        android:textSize="12sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price_180"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#5B3A3A"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <!-- Card 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="#E7DBC2"
                    android:padding="12dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/person2"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/designer_john" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/designer_john"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/talk"
                        android:textSize="12sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price_299"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#5B3A3A"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <!-- Card 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="#E7DBC2"
                    android:padding="12dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/person3"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/designer_peter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/designer_peter"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/talk"
                        android:textSize="12sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price_459"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#5B3A3A"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <!-- Card 4 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="#E7DBC2"
                    android:padding="12dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/person4"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/designer_tim" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/designer_tim"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/talk"
                        android:textSize="12sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price_159"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#5B3A3A"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

            </GridLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
